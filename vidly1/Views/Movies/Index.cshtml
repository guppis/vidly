@model vidly1.ViewModels.MoviesDetailsViewModel
@{
    ViewBag.Title = "Movies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>

<ul>
        @if (Model.Movies.Count > 0)
        {
            foreach (var movie in Model.Movies)
            {
                <li>@movie.Name</li>
            }
        }
        else
        {
            <li>There are no movies</li>
        }

</ul>
